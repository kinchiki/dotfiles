[user]
	name  = Akito Mizuno
	email = mznakt@gmail.com
[core]
    excludesfile = ~/.gitignore_global
	editor = vim -c \"set fenc=utf-8\"
	precomposeunicode = true
	quotepath = false
[color]
	diff   = auto
	status = auto
	branch = auto
	ui     = auto
[alias]
  ad  = add
  adu = add -u
  ada = add -A
  ci  = commit
  cim = commit -m
  cia = commit -ma
  co  = checkout
  st  = status -sb
  br  = branch
  l   = log --oneline
  d   = diff
  g   = grep
  gc  = grep -C
  sta = stash
[grep]
	lineNumber = true
[push]
	default = simple
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
