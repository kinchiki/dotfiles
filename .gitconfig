[user]
	name = Akito Mizuno
	email = mznakt@gmail.com
[core]
	excludesfile = ~/.gitignore_global
	editor = vim -c \"set fenc=utf-8\"
	precomposeunicode = true
	quotepath = false
[color]
	diff   = auto
	status = auto
	branch = auto
	ui     = auto
[alias]
    ad  = add
    adu = add -u
    ada = add -A
    ci  = commit
    cim = commit -m
    cia = commit -ma
    co  = checkout
    st  = status -sb
    br  = branch
    l   = log --oneline
    lg  = log --graph --decorate --oneline
    dcw = diff --color-words
    dc  = diff --cached
    df  = diff
    dw  = diff -w
    g   = grep
    gc  = grep -C
    sta = stash
    stali = stash list
    stalip = stash list -p
[grep]
	lineNumber = true
[push]
	default = simple
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[ghq]
    root = ~/src
[commit]
	template = ~/.stCommitMsg
