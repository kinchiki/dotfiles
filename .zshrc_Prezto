# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi


# Customize to your needs...

# 必要かどうかが分からん
# for zsh-completions
# fpath=(/usr/local/share/zsh-completions $fpath)
# autoload -Uz compinit
# ↓で起動がめちゃ遅くなった
# compinit


# Preztoで多分設定されていないもの

# ../ の後は今いるディレクトリを補完しない
zstyle ':completion:*' ignore-parents parent pwd ..

# Ctrl+Dでzshを終了しない
setopt ignore_eof

# 先頭がスペースならヒストリーに追加しない。
setopt hist_ignore_space

# rm * を実行する前に確認される。
setopt rmstar_wait

# ヒストリに保存するときに余分なスペースを削除する
setopt hist_reduce_blanks


# lsのエイリアス
alias la='ls -A'
alias lg='ls -Agh'
alias ll='ls -Ahl'
alias ld='ls -dh .*'
alias lld='ls -ldh .*'

# 確認
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# 省略
alias g=git
alias e=echo
alias cn='cat -n'
alias pb='pbcopy <'
alias th=touch

# sudo の後のコマンドでエイリアスを有効にする
alias sudo='sudo '

# ruby and rails
alias rb=ruby
alias rails='bundle exec rails'
alias ra='bundle exec rails'
alias be='bundle exec'
alias rake='bundle exec rake'
alias buninst='bundle install --path vendor/bundle'

# アプリ起動
alias xcode='open -a /Applications/Xcode.app'
alias subl='/Applications/Sublime\ Text.app/Contents/SharedSupport/bin/subl'

# ユニバーサルエイリアス
alias -g C='| pbcopy'
alias -g G='| grep'
alias -g dot='~/GitHub/dotfiles'

# 設定ファイル
alias -g zrc='~/.zshrc'
alias -g vrc='~/.vimrc'
alias -g gvrc='~/.gvimrc'
alias vz='vim ~/.zshrc'
alias vv='vim ~/.vimrc'
alias vgv='vim ~/.gvimrc'

alias sz='source ~/.zshrc'

# PostgreSQL
alias pgstt='pg_ctl start'
alias pgstp='pg_ctl stop'
alias pgres='pg_ctl restart'
alias pgsts='pg_ctl status'

# アップデート
alias preup='cd ~/.zprezto && git pull && git submodule update --init --recursive ; cd -'

# git
alias gad='git add'
alias gau='git add -u'
alias gaa='git add -A'
alias gc='git commit -m'
alias gl='git log --oneline'
alias gs='git status -sb'

# MacVim関連
if [ -f /Applications/MacVim.app/Contents/MacOS/Vim ]; then
  alias vi='env LANG=ja_JP.UTF-8 /Applications/MacVim.app/Contents/MacOS/Vim "$@"'
  alias vim='env_LANG=ja_JP.UTF-8 /Applications/MacVim.app/Contents/MacOS/Vim "$@"'
fi

alias v=vim


# 単語移動
bindkey '^[\e[C' forward-word
bindkey '^[\e[D' backward-word
bindkey ";5C" forward-word
bindkey ";5D" backward-word

# export PATH='$HOME/.rbenv/shims:$PATH'
# if which rbenv > /dev/null; then eval '$(rbenv init -)' ; fi

# 区切り文字設定 zprofileに書くとなぜか反映されなかった
export WORDCHARS="*?[]~;=!#$%^(){}<>"
